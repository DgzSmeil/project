<?xml version="1.0"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">       
<hibernate-mapping>      
    <class name="com.gs.pojo.Permission" table="t_permission">    
        <id name="id">     
            <generator class="uuid">
            </generator>    
        </id>    
        <property name="name" type="string" length="500" not-null="true" ></property>  
        <property name="des" type="string" length="50" not-null="true" ></property>
        <property name="created_time" type="date"></property>
        <property name="status" type="string" length="2"></property>
    </class>    
        
</hibernate-mapping>