<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="userPackage" namespace="/user" extends="basePackage">
    	<action name="*" class="userAction" method="{1}">
    		<result name="homepage">/WEB-INF/views/user/home.jsp</result>
    		<result name="login">/WEB-INF/views/user/login.jsp</result>
    		<result name="registered">/WEB-INF/views/user/registered.jsp</result>
    		<result name="information" >/WEB-INF/views/user/user_look.jsp</result>
    		<result name="changePwd" >/WEB-INF/views/user/changePwd.jsp</result>
    		<result name="look" >/WEB-INF/views/user/userhome.jsp</result>
    		<result name="like">/like.jsp</result>
    		<result name="yzm" type="json">/WEB-INF/views/user/login.jsp</result>
    		<!-- manager start -->
    		<result name="mgnuser" >/WEB-INF/views/manager/manager_user.jsp</result>
    		<result name="mgnuserlook" >/WEB-INF/views/manager/mng_userlook.jsp</result>
    		<result name="returnjson"  type="json"></result>
    		<!-- manager end -->
    	</action>
    </package>

</struts>