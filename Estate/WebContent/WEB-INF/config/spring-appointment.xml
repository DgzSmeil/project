<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="appointmentDAO" class="com.gs.dao.impl.AppointmentDAOImpl" autowire="byName"></bean>
	
	<bean id="appointmentService" class="com.gs.service.impl.AppointmentServiceImpl" autowire="byName"></bean>
	
	<bean id="appointmentAction" class="com.gs.controller.AppointmentAction" autowire="byName" scope="prototype"></bean>
</beans>